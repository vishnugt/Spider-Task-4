        <TextBlock x:Name="updatestatus" HorizontalAlignment="Left" Margin="771,654,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="444" Height="72" FontSize="36"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="114,654,0,0" VerticalAlignment="Top" Height="72" Width="207" FontSize="36" Click="Button_Click_1"/>

