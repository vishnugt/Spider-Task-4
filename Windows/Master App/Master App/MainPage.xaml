        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="114,529,0,0" TextWrapping="Wrap" Text="Fifth Hour&#x9;:" VerticalAlignment="Top" Height="40" Width="207" FontSize="24"/>
        <TextBox x:Name="txt1" HorizontalAlignment="Left" Height="40" Margin="387,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198"/>
        <TextBox x:Name="txt2" HorizontalAlignment="Left" Height="40" Margin="387,291,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198"/>
